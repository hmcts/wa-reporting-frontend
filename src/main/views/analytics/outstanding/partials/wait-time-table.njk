{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "macros/analytics-table.njk" import analyticsTable %}
{% from "macros/csv-download.njk" import csvDownloadButton %}

<h2 class="govuk-heading-m">Average wait time</h2>
<p class="govuk-body analytics-chart-intro">Average wait time for assigned tasks. Wait time is the number of days between task creation and assignment</p>
{% set waitTimeChartHtml %}
  <div class="analytics-chart" data-chart-config='{{ charts.waitTime | safe }}'></div>
{% endset %}
{% set waitTimeTableHtml %}
  <div class="analytics-tab-panel">
    {{ csvDownloadButton() }}
    {{ analyticsTable({
      attributes: {
        'data-export-csv': 'true',
        'data-export-filename': 'outstanding-wait-time.csv',
        'data-module': 'moj-sortable-table',
        'data-sticky-totals': 'true'
      },
      classes: "analytics-table--compact",
      hasTotals: true,
      head: [
        { text: "Assigned date", attributes: { 'aria-sort': 'none' } },
        { text: "Assigned tasks", format: "numeric", attributes: { 'aria-sort': 'none' } },
        { text: "Average wait time", format: "numeric", attributes: { 'aria-sort': 'none' } }
      ],
      rows: waitTimeRows.concat([waitTimeTotalsRow])
    }) }}
  </div>
{% endset %}
{{ govukTabs({
  id: "waitTimeTabs",
  items: [
    { label: "Chart", id: "waitTimeChart", panel: { html: waitTimeChartHtml } },
    { label: "Data table", id: "waitTimeTable", panel: { html: waitTimeTableHtml } }
  ]
}) }}
